<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/size_marker_layout"
                android:layout_height="@dimen/size_marker_layout">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/markerView"
            android:layout_width="@dimen/size_marker"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/size_marker"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_icon_marker"/>

    <View
            android:id="@+id/markerViewIndicator"
            android:layout_width="@dimen/size_marker_indicator_width"
            android:layout_height="@dimen/size_marker_indicator_height"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_indicator"/>

</RelativeLayout>